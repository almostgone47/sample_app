<% provide(:title, @user.name)%>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
</div>
<p>Email: <%= @user.email %></p>
<small>Created At: <%= @user.created_at %></small>
<small>Last Updated: <%= time_ago_in_words(@user.updated_at) %> ago</small>
<hr>
<small>Today's Date: <%= Time.now.strftime("%b %e, %Y") %></small>